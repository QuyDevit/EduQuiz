@{
    Layout = "_LayoutAuth";
}
<div class="wrapper">
    <div class="main">
        <div class="container" style="margin-top:50px">
            @if (ViewBag.IsCheck == true)
            {
                <div class="row" style=" padding: 10px; background: #b7cdad; border-radius: 5px;">
                    <div class="col-md-12">
                        <h2 style="color: #424542; ">@ViewBag.Notification</h2>
                        <p style=" color: #044515;">@ViewBag.Content Đến trang <a style="color:#000;font-weight:600;text-decoration:underline" href="@ViewBag.Redirect">Đăng nhập</a></p>
                    </div>
                </div>
            }
            else
            {
                <div class="row" style=" padding: 10px; background: #dd5656; border-radius: 5px;">
                    <div class="col-md-12">
                        <h2 style="color: #000; ">@ViewBag.Notification</h2>
                        <p style=" color: #000;">@ViewBag.Content Quay lại <a style="color:#000;font-weight:600;text-decoration:underline" href="@ViewBag.Redirect">Trang chủ</a></p>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

