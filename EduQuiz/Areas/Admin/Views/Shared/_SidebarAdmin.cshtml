                <span class="nav-link-text ms-1">Tài khoản</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(currentPath.Contains("/admin/manage/collection") ? "bg-gradient-dark text-white active" : "text-dark" )" href="@Url.Action("Index","Collection")">
