@{
    Layout = "_LayoutAdmin";
    ViewBag.Title = "Quản lý tài khoản";
}
@model ICollection<EduQuiz.Models.EF.User>
<div class="container-fluid py-2">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Tài khoản</h6>
                    </div>
                </div>
                <div class="card-body px-0 pb-2 px-4">
                    <div class="table-responsive p-0">
                        <table id="myTable" class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Tên người dùng</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Loại tài khoản</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Gói đăng ký</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Vi phạm</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Ngày tạo</th>
                                    <th class="text-secondary text-xxs opacity-7">Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div>
                                                    <img src="@item.ProfilePicture" class="avatar avatar-sm me-3 border-radius-lg" alt="user1">
                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item.Username</h6>
                                                    <p class="text-xs text-secondary mb-0">@item.Email</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.Role.Name</p>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <span class="badge badge-sm @(item.SubscriptionType == "vip" ? "bg-gradient-success" :"bg-gradient-secondary") ">@item.SubscriptionType</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@item.ViolationCount</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@string.Format("{0:dd/MM/yyyy}", item.CreatedAt)</span>
                                        </td>
                                        <td class="align-middle">
                                            <div class="form-check form-switch ps-0 ms-auto my-auto">
                                                <input class="form-check-input mt-1 ms-auto" type="checkbox" onchange="ChangeStatus(@item.Id)" @(item.Status ? "checked" :"") />
                                            </div>
                                        </td>
                                    </tr>
                                }
                              
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable({
            "order": []
        }); 
    });
    function ChangeStatus(value) {
        $.ajax({
            type: "POST",
            url: "@Url.Action("ChangeStatusAccount", "Account", new { area = "Admin" })",
            data: {
                iduser: value,
            },
            success: function (response) {
                if (response.status == true) {

                }
            },
            error: function (err) {

            }
        })
    }
</script>