@{
    Layout = "_LayoutAdmin";
    ViewBag.Title = "Bảng điều khiển";
}
@model EduQuiz.Areas.Admin.Models.DashboardViewModel
<div class="container-fluid py-2">
    <div class="row mb-3">
        <div class="ms-3">
            <h3 class="mb-0 h4 font-weight-bolder">Bảng điều khiển</h3>
            <p class="mb-4">
                Tổng quan hệ thống.
            </p>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-header p-2 ps-3">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-sm mb-0 text-capitalize">Doanh thu hôm nay</p>
                            <h4 class="mb-0">@string.Format("{0:N0}", Model.RevenueToday) vnđ</h4>
                        </div>
                        <div class="icon icon-md icon-shape bg-gradient-dark shadow-dark shadow text-center border-radius-lg">
                            <i class="material-symbols-rounded opacity-10">weekend</i>
                        </div>
                    </div>
                </div>
                <hr class="dark horizontal my-0">
                <div class="card-footer p-2 ps-3 d-flex justify-content-center">
                    <p class="mb-0 text-sm"><span class="text-success font-weight-bolder">------^^^^^------</span></p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-header p-2 ps-3">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-sm mb-0 text-capitalize">Tổng số người dùng</p>
                            <h4 class="mb-0">@Model.CountAccount người dùng</h4>
                        </div>
                        <div class="icon icon-md icon-shape bg-gradient-dark shadow-dark shadow text-center border-radius-lg">
                            <i class="material-symbols-rounded opacity-10">person</i>
                        </div>
                    </div>
                </div>
                <hr class="dark horizontal my-0">
                <div class="card-footer p-2 ps-3 d-flex justify-content-center">
                    <p class="mb-0 text-sm"><span class="text-success font-weight-bolder">------_____------ </span></p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-header p-2 ps-3">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-sm mb-0 text-capitalize">Hồ sơ cần duyệt</p>
                            <h4 class="mb-0">@Model.CountProfileCheck hồ sơ</h4>
                        </div>
                        <div class="icon icon-md icon-shape bg-gradient-dark shadow-dark shadow text-center border-radius-lg">
                            <i class="material-symbols-rounded opacity-10">leaderboard</i>
                        </div>
                    </div>
                </div>
                <hr class="dark horizontal my-0">
                <div class="card-footer p-2 ps-3 d-flex justify-content-center">
                    <p class="mb-0 text-sm"><span class="text-success font-weight-bolder">------^^^^^------ </span></p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6">
            <div class="card">
                <div class="card-header p-2 ps-3">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-sm mb-0 text-capitalize">Doanh thu tháng này</p>
                            <h4 class="mb-0">@string.Format("{0:N0}", Model.RevenueThisMonth) vnđ</h4>
                        </div>
                        <div class="icon icon-md icon-shape bg-gradient-dark shadow-dark shadow text-center border-radius-lg">
                            <i class="material-symbols-rounded opacity-10">weekend</i>
                        </div>
                    </div>
                </div>
                <hr class="dark horizontal my-0">
                <div class="card-footer p-2 ps-3 d-flex justify-content-center">
                    <p class="mb-0 text-sm"><span class="text-success font-weight-bolder">------_____------ </span></p>
                </div>
            </div>
        </div>
    </div>
   
    <div class="row mb-4" style="min-height:525px;">
        <div class="col-lg-8 col-md-6 mb-md-0 mb-4">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="row">
                        <div class="col-lg-6 col-7">
                            <h6>Các phiên chơi hiện tại</h6>
                            <p class="text-sm mb-0">
                                <i class="fa fa-check text-info" aria-hidden="true"></i>
                                <span class="font-weight-bold ms-1">Tổng cộng</span> @Model.QuizSessionToday.Count phiên
                            </p>
                        </div>
                    </div>
                </div>
                <div class="card-body px-0 pb-2 px-4">
                    <div class="table-responsive">
                        <table id="myTable" class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Chủ phòng</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Mã pin</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Số lượng người chơi</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Thời gian tạo</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model.QuizSessionToday)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div>
                                                    <img src="@item.Avatar" class="avatar avatar-sm me-3" alt="xd">
                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item.HostUser</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="text-xs font-weight-bold"> @item.Pin </span>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <span class="text-xs font-weight-bold"> @item.SumPlayer </span>
                                        </td>
                                        <td class="align-middle">
                                            <span class="text-xs font-weight-bold"> @item.CreatedAt </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="card h-100">
                <div class="card-header pb-0">
                    <h6>Tổng quan các hóa đơn</h6>
                    <p class="text-sm">
                        <span class="font-weight-bold text-success">Ngày hôm nay</span>
                    </p>
                </div>
                <div class="card-body p-3">
                    <div class="timeline timeline-one-side">
                        <div class="timeline-block mb-3">
                            <span class="timeline-step">
                                <i class="material-symbols-rounded text-success text-gradient">notifications</i>
                            </span>
                            <div class="timeline-content">
                                <h6 class="text-dark text-sm font-weight-bold mb-0">Các hóa đơn mới nhất</h6>
                                <p class="text-secondary font-weight-bold text-xs mt-1 mb-0">@DateTime.Now</p>
                            </div>
                        </div>
                        @foreach(var order in Model.OrderToday)
                        {
                            <div class="timeline-block mb-3">
                                <span class="timeline-step">
                                    <i class="material-symbols-rounded text-success text-gradient">notifications</i>
                                </span>
                                <div class="timeline-content">
                                    <h6 class="text-dark text-sm font-weight-bold mb-0">Mã hóa đơn - #@order.OrderId</h6>
                                    <p class="text-secondary font-weight-bold text-xs mt-1 mb-0">@order.CreateAt</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer py-4  ">
        <div class="container-fluid">
            <div class="row align-items-center justify-content-lg-between">
                <div class="col-lg-6 mb-lg-0 mb-4">
                    <div class="copyright text-center text-sm text-muted text-lg-start">
                        © <script>
                              document.write(new Date().getFullYear())
                        </script>,
                        được thực hiện bởi <i class="fa fa-heart"></i>
                        <a href="#" class="font-weight-bold">EduQuiz</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</div>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable({
            "order": []
        });

    });
</script>